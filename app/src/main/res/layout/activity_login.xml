<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="#CDDC39"
    tools:context=".Login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#021666"
        android:layout_margin="8dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MyLearning"
                android:textColor="#FF5722"
                android:textSize="50dp"
                android:layout_marginTop="16dp"
                app:fontFamily="@font/alex_brush"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true" />


    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/button_circular"
        android:layout_centerInParent="true">


        <EditText
            android:id="@+id/LEmailBTN"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"

            android:ems="10"
            android:hint="Email"
            android:layout_below="@id/textView"
            android:inputType="textEmailAddress"
            android:textColor="#000"
            android:textColorHint="#000"
            />
        <EditText
            android:id="@+id/LPasswordBTN"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="55dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#000"
            android:textColorHint="#000"
            android:layout_below="@+id/LEmailBTN"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RadioButton
                    android:id="@+id/studentl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="36dp"
                    android:text="Student"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:layout_below="@+id/LPasswordBTN" />


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <RadioButton
                    android:id="@+id/teacherl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="40sp"
                    android:layout_marginTop="36dp"

                    android:text="Teacher"
                    android:textColor="#000"
                    android:textSize="20dp" />

            </LinearLayout>





        </LinearLayout>


        <ProgressBar
            android:id="@+id/LprogressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:visibility="invisible"
            />


    </LinearLayout>


    <Button
        android:id="@+id/LogInBTN"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:layout_marginLeft="20dp"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="16dp"
        android:layout_marginRight="20dp"
        android:textSize="18sp"
        android:background="@drawable/button_circular"

        android:text="Log In" />

    <TextView
        android:id="@+id/NewUserTXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="14dp"
        android:text="New User ? Register Here"
        android:textColor="#fff"
        android:textSize="20dp"
      android:layout_above="@+id/forgotpassword" />



    <TextView
        android:id="@+id/forgotpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="12dp"
        android:text="Forget Password ? Reset"
        android:textColor="#fff"
        android:textSize="16dp" />


    </RelativeLayout>
</RelativeLayout>